<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LayoutBase"
    android:background="@drawable/white" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/tools_top" >

    </include>

    <EditText
        android:id="@+id/transEdit"
        style="@style/EditText"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:hint="@string/translate_word"
        android:maxLength="200" />

    <Button
        android:id="@+id/transButton"
        style="@style/Button"
        android:layout_gravity="right"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/translator" />

    <ScrollView
        style="@style/ScrollViewWidget"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/transText"
            style="@style/TextView"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:textIsSelectable="false" />

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/up"
            style="@style/TextButton"
            android:layout_height="fill_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="?attr/TextViewBackground"
            android:drawableLeft="@drawable/up"
            android:text="@string/back" />

    </LinearLayout>

</LinearLayout>